@using Belek.Frontends.Web.Models.Catalogs
@{
    ViewData["Title"] = "Index";
}
@model List<CatalogViewModel>

<div class="row">
    <div class="col-md-12">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Catalogs</h5>

                <a asp-controller="Catalogs" asp-action="Create" class="btn btn-primary mb-3">Create</a>
                @if (Model.Any())
                {
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Catalog name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        <a asp-controller="Catalogs" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Update</a>

                                        <a asp-controller="Catalogs" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="alert alert-info">
                        Catalog not found
                    </div>
                }
            </div>
        </div>
    </div>
</div>